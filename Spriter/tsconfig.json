{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "lib": [ "es5", "dom", "es2015.promise", "es2017", "scripthost" ],
    "outDir": "out",
    "baseUrl": ".",
    "paths": {
      "gameModules/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "lib/**/*",

    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "wwwroot",
    "js/**/*"
  ]
}
